<openerp>
    <data>
        <record id="view_partner_form_agent_plan" model="ir.ui.view">
            <field name="name">res.partner.form.agent.plan</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="sale_commission.view_partner_form_agent"/>
            <field name="arch" type="xml">
                <field name="commission" position="attributes">
                    <attribute name="attrs"></attribute>
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="commission" position="after">
                    <field name="plan" attrs="{'required': [('agent', '=', True)]}"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
